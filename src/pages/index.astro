---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
---

<Layout title="Ines Benrhannou - Portfolio">
	<Navbar/>

	<section class="hero is-fullheight">
		<div class="hero-body">
			<div class="container">
				<div class="block">
					<h1 class="title reveal-1">Ines Benrhannou</h1>
					<img src="/img/sabrina.jpg" alt="" class="image meme">
					<h3 class="subtitle reveal-2">Automotive designer&nbsp;&nbsp;.Artist&nbsp;&nbsp;.Creative</h3>

					<div class="links reveal-3">
						<a class="i ri:behance-fill" href="https://www.behance.net/inesbenrhannou/moodboards" target="_blank"></a>
						<a class="i ri:linkedin-fill" href="https://www.linkedin.com/m/in/ines-benrhannou-840aa1202" target="_blank"></a>
						<a class="i ri:instagram-line" href="https://www.instagram.com/iddraw.pro/" target="_blank"></a>
						<a class="i mdi:artstation" href="https://www.artstation.com/nesni5" target="_blank"></a>
						<a class="i material-symbols:mail" href="mailto:inesbenrhannou@gmail.com"></a>
					</div>
				</div>
			</div>
		</div>
	</section>

</Layout>

<style lang="scss">
	section {
		height: 100vh !important;
		background-color: black;
		background-image: url('/img/home-bg.jpg');
		background-size: cover;
		background-repeat: no-repeat;
		background-position: bottom;

		@media screen and (max-width: 768px) {
			background-size: cover;
		}

		.hero-body {
			// background-color: rgba($color: #000000, $alpha: 0.5);
		}
	}

	.block {
		color: black;
		letter-spacing: 2px;
		// border: solid red;
		text-align: center;
		width: max-content;
		margin-left: auto;
		margin-top: 20%;

		@media screen and (max-width: 425px) {
			width: 100%;
			margin-top: 100%;
		}

		h1 {
			text-transform: uppercase;
			letter-spacing: 10px;
			font-family: 'PF Din Text Universal thin';
			color: inherit !important;
			padding-bottom: 20px;
		}
	
		h3 {
			font-family: 'PF Din Text Universal regular';
			color: inherit !important;
			font-size: 0.8rem !important;
			letter-spacing: 1px;
		}
	}

	.links a {
		background-color: black;
		color: white;
		// padding: 3px;
		border-radius: 50px;
		text-align: center;
		display: inline-block;
		width: 30px !important;
		height: 30px !important;
		border: solid transparent;
		transition: all ease-in-out 0.3s;
		margin: 0 5px;

		&:hover {
			border: solid black;
			background-color: white;
			color: black;
		}
	}

	.meme {
		display: none;
		position: absolute;
		top: -200px;
		width: 300px;

		&.active {
			display: block;
		}
	}

</style>
<script>
	let keyCombination = ['s', 'a', 'b', 'r', 'i', 'n', 'a'];
	let index = 0;

	document.addEventListener('keydown', function(event) {
	if (event.key === keyCombination[index]) {
		index++;
		if (index === keyCombination.length) {
			console.log('appears')
			const sabrina = document.getElementsByClassName('meme')[0]
			sabrina.classList.add('active')
			index = 0;
		}
		} else {
			index = 0;
		}
	});
</script>
