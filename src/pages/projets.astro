---
// 2 proj du book
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import ReactLightbox from '../components/ReactLightbox.jsx';
---


<Layout title="Projets - Ines Benrhannou">
	<Navbar page="projets" />
	<section>
		<div class="container is-fluid">
			<h1 class="title reveal-1">Projets</h1>
			<div class="columns">
				<div class="column reveal-2">
					<h2 class="subtitle">Mercedes</h2>
					<ReactLightbox client:only="react" thumbnails={true} poster="/img/mercedes-0009.jpg" sources={[{ src: "/img/mercedes-0003.jpg" }, { src: "/img/mercedes-0004.jpg" }, { src: "/img/mercedes-0005.jpg" }, { src: "/img/mercedes-0006.jpg" }, { src: "/img/mercedes-0007.jpg" }, { src: "/img/mercedes-0008.jpg" }, { src: "/img/mercedes-0009.jpg" }]} />
				</div>
			</div>
			<div class="columns">
				<div class="column reveal-2">
					<h2 class="subtitle">Peugeot</h2>
					<ReactLightbox client:only="react" thumbnails={true} poster="/img/peugeot-0010.jpg" sources={[{ src: "/img/peugeot-0010.jpg" }, { src: "/img/peugeot-0011.jpg" }, { src: "/img/peugeot-0012.jpg" }, { src: "/img/peugeot-0013.jpg" }, { src: "/img/peugeot-0014.jpg" }]} />
				</div>
			</div>
		</div>
		<!-- quelques sketch et un du design -->
	</section>
</Layout>

<style lang="scss">
	section {
		background-color: black;
		padding-top: 100px;
		min-height: 100vh;
		overflow: hidden;

		h1 {
			color: white !important;
			font-size: 3rem !important;
			font-family: 'ClashDisplay-Medium';
			margin-bottom: 80px !important;
			letter-spacing: 2px;
			text-align: center;
		}
	}
	.column {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		// border: solid 1px yellow;

		h2 {
			color: white !important;
			width: 80%; // same as lightbox image
			font-family: 'ClashDisplay-Regular';
			font-size: 2rem !important;
			// align-self: baseline;
			// border: solid 1px yellow;
		}
	}
</style>